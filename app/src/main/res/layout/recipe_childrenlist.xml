<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/ig1"
        android:layout_width="141dp"
        android:layout_height="35dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:paddingBottom="5dp"
        android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
        android:paddingTop="5dp"
        android:text="TextView"
        android:textColor="@color/Cucumber"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/ig2"
        app:layout_constraintEnd_toStartOf="@+id/qu1"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/qu1"
        android:layout_width="141dp"
        android:layout_height="35dp"
        android:layout_marginEnd="94dp"
        android:layout_marginTop="8dp"
        android:paddingBottom="5dp"
        android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
        android:paddingTop="5dp"
        android:text="TextView"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/qu2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ig1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ig2"
        android:layout_width="141dp"
        android:layout_height="35dp"
        android:layout_marginStart="8dp"
        android:paddingBottom="5dp"
        android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
        android:paddingTop="5dp"
        android:text="TextView"
        android:textColor="@color/Cucumber"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/qu2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ig1" />

    <TextView
        android:id="@+id/qu2"
        android:layout_width="141dp"
        android:layout_height="35dp"
        android:layout_marginEnd="94dp"
        android:paddingBottom="5dp"
        android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
        android:paddingTop="5dp"
        android:text="TextView"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ig2"
        app:layout_constraintTop_toBottomOf="@+id/qu1" />

    <TextView
        android:id="@+id/ig3"
        android:layout_width="141dp"
        android:layout_height="35dp"
        android:layout_marginStart="8dp"
        android:paddingBottom="5dp"
        android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
        android:paddingTop="5dp"
        android:text="TextView"
        android:textColor="@color/Cucumber"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/qu3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ig2" />

    <TextView
        android:id="@+id/qu3"
        android:layout_width="141dp"
        android:layout_height="35dp"
        android:layout_marginEnd="94dp"
        android:paddingBottom="5dp"
        android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
        android:paddingTop="5dp"
        android:text="TextView"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ig3"
        app:layout_constraintTop_toBottomOf="@+id/qu2" />

    <TextView
        android:id="@+id/ig4"
        android:layout_width="141dp"
        android:layout_height="35dp"
        android:layout_marginStart="8dp"
        android:paddingBottom="5dp"
        android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
        android:paddingTop="5dp"
        android:text="TextView"
        android:textColor="@color/Cucumber"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/qu4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ig3" />

    <TextView
        android:id="@+id/qu4"
        android:layout_width="141dp"
        android:layout_height="35dp"
        android:layout_marginEnd="94dp"
        android:paddingBottom="5dp"
        android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
        android:paddingTop="5dp"
        android:text="TextView"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ig4"
        app:layout_constraintTop_toBottomOf="@+id/qu3" />

    <TextView
        android:id="@+id/ig5"
        android:layout_width="141dp"
        android:layout_height="35dp"
        android:layout_marginStart="8dp"
        android:paddingBottom="5dp"
        android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
        android:paddingTop="5dp"
        android:text="TextView"
        android:textColor="@color/Cucumber"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/qu5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ig4" />

    <TextView
        android:id="@+id/qu5"
        android:layout_width="141dp"
        android:layout_height="35dp"
        android:layout_marginEnd="94dp"
        android:paddingBottom="5dp"
        android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
        android:paddingTop="5dp"
        android:text="TextView"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ig5"
        app:layout_constraintTop_toBottomOf="@+id/qu4" />

    <ScrollView
        android:layout_width="351dp"
        android:layout_height="346dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="38dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ig5"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/instruction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>