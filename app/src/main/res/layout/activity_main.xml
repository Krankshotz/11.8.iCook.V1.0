<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jordan.icook.MainActivity"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:id="@+id/background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:cropToPadding="true"
        android:scaleType="centerCrop"
        android:visibility="visible"
        app:srcCompat="@drawable/bcgrdcrop"
        tools:ignore="RtlHardcoded"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/banner"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="-16dp"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <ImageButton
        android:id="@+id/preferencesButton4"
        android:layout_width="144dp"
        android:layout_height="144dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/btton4"
        android:layout_marginRight="30dp"
        app:layout_constraintRight_toRightOf="@+id/background"
        app:layout_constraintBottom_toBottomOf="@+id/background"
        android:layout_marginBottom="141dp"
        android:layout_marginEnd="30dp" />

    <ImageButton
        android:id="@+id/recipesButton3"
        android:layout_width="144dp"
        android:layout_height="144dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/btton3"
        app:layout_constraintBottom_toBottomOf="@+id/background"
        android:layout_marginBottom="141dp"
        android:layout_marginLeft="28dp"
        app:layout_constraintLeft_toLeftOf="@+id/background"
        android:layout_marginStart="28dp" />

    <ImageButton
        android:id="@+id/receiptButton1"
        android:layout_width="144dp"
        android:layout_height="144dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:tint="@android:color/transparent"
        app:srcCompat="@drawable/btton1"
        android:layout_marginLeft="28dp"
        app:layout_constraintLeft_toLeftOf="@+id/background"
        app:layout_constraintBottom_toBottomOf="@+id/background"
        android:layout_marginBottom="301dp"
        android:layout_marginStart="28dp" />

    <ImageButton
        android:id="@+id/pantryButton2"
        android:layout_width="144dp"
        android:layout_height="144dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/btton2"
        tools:ignore="ContentDescription"
        android:layout_marginRight="30dp"
        app:layout_constraintRight_toRightOf="@+id/background"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="301dp"
        app:layout_constraintBottom_toBottomOf="@+id/background" />

    <ImageView
        android:id="@+id/banner"
        android:layout_width="0dp"
        android:layout_height="99dp"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/background"
        app:srcCompat="@drawable/banner"
        app:layout_constraintBottom_toBottomOf="@+id/background"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <ImageButton
        android:id="@+id/Button5Help"
        android:layout_width="49dp"
        android:layout_height="46dp"
        android:background="@android:drawable/radiobutton_off_background"
        android:backgroundTint="@android:color/background_light"
        android:tint="@android:color/background_dark"
        app:srcCompat="@android:drawable/ic_menu_help"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="3dp"
        app:layout_constraintRight_toRightOf="@+id/banner"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
